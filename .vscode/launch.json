{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "run selected file",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      // program - an absolute path to the Node.js program to debug.
      // ${file} - the currently open file.
      "program": "${file}",
      // break immediately when the program launches
      "stopOnEntry": true
    },
  ]
}
